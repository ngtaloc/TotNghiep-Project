@using Models.Framework
@model TaiKhoan

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    @foreach (var role in Roles.GetRolesForUser())
    {
        <a href="Areas/@role/Home" class="brand-link">
            <img src="@Url.Content("~/Content/Template/dist/img/"+@role+".png")" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light">@role</span>
        </a>
    }
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="@Url.Content("~/Content/Template/dist/img/user2-160x160.jpg")" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@(Model.HocVien.Count != 0 ? Model.HocVien.FirstOrDefault().hovaten : (Model.Giangvien.Count != 0 ? Model.Giangvien.FirstOrDefault().hovaten : "Nguyễn Tấn Lộc") )</a>
                @Html.ActionLink("Đăng xuất", "Logout", "Login")
            </div>
        </div>

        @*@Html.TextBoxFor(model => model.ChucNangs.)*@
        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                with font-awesome or any other icon font library -->
                @helper ItemCon(ChucNang item)
                {
                    <ul class="nav nav-treeview">
                        @foreach (var i in item.ChucNang1)
                        {

                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>
                                        @i.tenChucNang
                                        @if (i.ChucNang1.Count != 0)
                                        {<i class="fas fa-angle-left right"></i>}
                                    </p>
                                </a>
                                @if (i.ChucNang1.Count != 0)
                                {@ItemCon(i)}
                            </li>

                        }
                    </ul>
                }
                @foreach (var it in Model.TAIKHOAN_NHOMQUYEN)
                {
                    foreach (var item in it.NhomQuyen.ChucNang)
                    {
                        if (item.ChucNang2 == null)
                        {
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-user-graduate"></i>
                                    <p>
                                        @item.tenChucNang
                                        @if (item.ChucNang1.Count != 0)
                                        {<i class="fas fa-angle-left right"></i>}
                                    </p>
                                </a>
                                @if (item.ChucNang1.Count != 0)
                                {@ItemCon(item)}

                            </li>
                        }


                    }
                }


            </ul>
            @*@RenderPage("Layout/ChucNang.cshtml")*@
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>

