
@{
    Layout = null;
}
<style>
	.header1 {
		margin-top: -20px;
		height: 100px;
		margin-bottom: 25px;
		width: 100%;
		-webkit-box-shadow: 0 4px rgb(0 0 0 / 5%);
	}
	.logo1 {
		margin-left: 40px;
		padding-top: 25px;
	}
	.logo1 img {
		margin-bottom: 10px;
	}
	.nav-link {
		border-top: none;
		
	}
	.border {
		border: 1px solid gainsboro;
	}
	
</style>
<div class="container-onlineclass">
	<div class="header1">
		<div class="logo1">
			<img src="~/Content/img/logos/zoom.png" width="110" /><br/>
			<p>TiengAnhOnline.com</p>
		</div>
	</div>
	<div class="content1">
		<div class="nav1">
			<ul class="nav nav-tabs"  role="tablist">
				<li class="nav-item  border">
					<a class="nav-link active" id="custom-tabs-four-home-tab" data-toggle="pill" href="#next-class" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true">Lớp học sắp tới</a>
				</li>							
				<li class="nav-item  border">
					<a class="nav-link" id="custom-tabs-four-ls-tab" data-toggle="pill" href="#history" role="tab" aria-controls="custom-tabs-four-ls" aria-selected="false">&nbsp;&nbsp; &nbsp;&nbsp; Lịch sử &nbsp;&nbsp;&nbsp;&nbsp;</a>
				</li>
			</ul>
		</div>
		<div class="card-body1">
			<div class="tab-content" id="custom-tabs-four-tabContent">
				<div class="tab-pane fade show active" id="next-class" role="tabpanel" aria-labelledby="custom-tabs-four-home-tab">
					@{Html.RenderAction("Meeting", "Learning", new { tt = 1 });}
				</div>							
				<div class="tab-pane fade" id="history" role="tabpanel" aria-labelledby="custom-tabs-four-ls-tab">
					@{Html.RenderAction("Meeting", "Learning", new { tt = 0 });}
				</div>

			</div>
		</div>
	</div>
</div>
