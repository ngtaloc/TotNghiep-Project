@section masterjs{
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script>
		$(document).ready(function () {
            $(".content-comment").hide()
            $(".traloi").hide()

            $(".fa-sort-up").click(function () {
                $(this).closest(".coment-bottom.bg-white.p-2.px-4").find(".content-comment").hide();

            });

            $(".fa-sort-down").click(function () {
                $(".content-comment").hide();
                $(".traloi").hide();
                $(this).closest(".coment-bottom.bg-white.p-2.px-4").find(".content-comment ").show();
            });

            $(".mt-1").click(function () {
                if ($(".traloi").show()) {
                    $(".traloi").hide();
                };
                $(this).closest(".coment-bottom.bg-white.p-2.px-4").find(".traloi").toggle();
                $(".text").focus();

            });
		});

		var feild = document.querySelector('textarea');
		var backUp = feild.getAttribute('placeholder');
		var btn = document.querySelector('.btn1');
		var clear = document.getElementById('clear')

		feild.onfocus = function () {
			this.setAttribute('placeholder', '');
			this.style.borderColor = '#333';
			btn.style.display = 'block'
		}

		feild.onblur = function () {
			this.setAttribute('placeholder', backUp);
			this.style.borderColor = '#aaa'
		}

		//clear.onclick = function () {
		//	btn.style.display = 'none';
		//	feild.value = '';
		//	$(".traloi").hide()
		//}


        $(".clear").click(function () {
            $(this).closest(".coment-bottom.bg-white.p-2.px-4").find(".traloi").hide();
            feild.value = '';


        });
	</script>
}

