@section Header{
    QUẢN LÝ GIÁO VIÊN
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <div class="card card-primary card-outline">

            <div class="card-body">
                <div class="input-group">
                    <div class="form-group col-sm-4">
                        <!-- select -->
                        <label class="form-control-label">Lọc theo: </label>

                        <select class="col-sm-9 form-control" style="display:inline-block;">
                            <option>option 1</option>
                            <option>option 2</option>
                            <option>option 3</option>
                            <option>option 4</option>
                            <option>option 5</option>
                        </select>

                    </div>
                    <div class="col-md-6 offset-md-2">
                        <form>
                            <div class="input-group">

                                <input type="search" class="form-control form-control-xl" placeholder="Tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-xl btn-default">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="input-group">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Danh sách giáo viên</h6>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <div class="table-responsive">
                                    @Html.BeginForm("Edit", "QLGiaoVien", FormMethod.Get){

                                    <table id="example1" class="table table-striped table-hover card-text">
                                        <thead>
                                            <tr>
                                                <th>Mã</th>
                                                <th>Họ và tên</th>
                                                <th>Hình ảnh</th>
                                                <th>Giớ tính</th>
                                                <th>Ngày sinh</th>
                                                <th>giới thiệu</th>
                                                <th>Email</th>
                                                <th>Số điện thoại</th>
                                                <th>Tên đăng nhập</th>
                                                <th>Trạng thái</th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>GV <p name="id">@item.ID</p></td>
                                                    <td>@item.hovaten</td>
                                                    <td><img src="@item.hinh" alt="@item.hovaten" width="40"</td>
                                                    <td>@item.gioitinh</td>
                                                    <td>@item.ngaysinh</td>
                                                    <td>@item.gioithieu</td>
                                                    <td>@item.email</td>
                                                    <td>@item.sdt</td>
                                                    <td>@item.TaiKhoan.tenDangNhap</td>
                                                    <td>@item.TaiKhoan.trangThai</td>
                                                    <td>

                                                        <a class="btn btn-info btn-sm" href="/Admin/QLGiaoVien/Edit?id=@item.ID" data-toggle="modal" data-target="#modal-edit-lg">
                                                            <i class="fas fa-pencil-alt">
                                                            </i>
                                                            Sửa
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-danger btn-sm" href="/Admin/QLGiaoVien/Edit?id=@item.ID" data-toggle="modal" data-target="#modal-del-lg">
                                                            <i class="fa fa-lock">
                                                            </i>
                                                            Khóa
                                                        </a>
                                                    </td>
                                                </tr>
                                            }


                                        </tbody>

                                    </table>

                                    }


                                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

                                    @*Modal Edit*@
                                    @Html.BeginForm("Edit", "QLGiaoVien", FormMethod.Post){

                                    <div class="modal fade" id="modal-edit-lg">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title">Cập nhật thông tin giáo viên</h4>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    @foreach (var item in Model)
                                                    {
                                                        @item.hovaten
                                                    }
                                                </div>
                                                <div class="modal-footer justify-content-between">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                                </div>
                                            </div>
                                            <!-- /.modal-content -->
                                        </div>
                                        <!-- /.modal-dialog -->
                                    </div>

                                    }

                                    @*Modal Delete*@
                                    @Html.BeginForm("Edit", "QLGiaoVien", FormMethod.Post){

                                    <div class="modal fade" id="modal-del-lg">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title">Cập nhật thông tin giáo viên</h4>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    @*@model Models.Framework.Giangvien
                                                    @Html.TextBoxFor(model => model.hovaten, new { @class = "form-control border-0 shadow form-control-lg", @placeholder = "Tên đăng nhập", @name = "username", @autofocus = "autofocus", @required = "required" })*@

                                                    @foreach (var item in Model)
                                                    {
                                                        @item.hovaten
                                                    }
                                                </div>
                                                <div class="modal-footer justify-content-between">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                                </div>
                                            </div>
                                            <!-- /.modal-content -->
                                        </div>
                                        <!-- /.modal-dialog -->
                                    </div>

                                    }


                                </div>

                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>

            </div>

        </div>


        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- SweetAlert2 -->
<script src="../../plugins/sweetalert2/sweetalert2.min.js"></script>
<!-- Toastr -->
<script src="../../plugins/toastr/toastr.min.js"></script>



