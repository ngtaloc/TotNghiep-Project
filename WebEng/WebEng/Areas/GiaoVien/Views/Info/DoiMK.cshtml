
@model  Models.Framework.TaiKhoan

@using (Html.BeginForm("DoiMK", "Info", Model, FormMethod.Post))
{
    <div class="modal fade" id="modal-DoiMK" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div style="margin:auto" class="modal-header">
                    <h4 style="text-align:center" class="modal-title">Đổi mật khẩu</h4>
                </div>

                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên đăng nhập</label>
                        @Html.TextBoxFor(model => model.tenDangNhap, new { @class = "form-control", @id = "className", @placeholder = "Tên lớp", @required = "true", @readonly = "true" })
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">mật khẩu</label>
                        <input class="form-control" type="password" name="matkhau" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">mật khẩu mới</label>
                        <input class="form-control" type="password" name="matkhaumoi" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Nhập lại mật khẩu</label>
                        <input class="form-control" type="password" name="reMKmoi" />

                    </div>

                </div>
                <div class="modal-footer" style="text-align:center">
                    <button type="button" class="btn btn-md btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-md btn-primary">Xác nhận</button>
                    @*<button type="button" onclick="myFunction()" class="btn btn-md btn-secondary" data-toggle="modal" data-target="#creatlesson" data-dismiss="modal">Tiếp tục</button>*@
                </div>

            </div>
        </div>
    </div>
}