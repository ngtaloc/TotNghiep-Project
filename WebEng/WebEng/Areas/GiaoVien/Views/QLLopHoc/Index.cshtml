@model Models.Framework.LopHoc
@{
    ViewBag.Title = "Quản lý lớp học";
    Layout = "~/Views/Shared/_TemLayout.cshtml";
}


@section css{
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="@Url.Content("~/Content/Template/plugins/sweetalert2/sweetalert2.min.css")">
    <!-- Toastr -->
    <link rel="stylesheet" href="@Url.Content("~/Content/Template/plugins/toastr/toastr.min.css")">
    <style>
        .card-body {
            min-height: 515px;
        }
    </style>


}
@section header{
    @Model.tenLopHoc
}

<div class="row">
    <div class="col-12 col-sm-12">
        <div class="card card-primary card-outline card-outline-tabs">
            <div class="card-header p-0 border-bottom-0">
                <ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="custom-tabs-four-Infoclasss-tab" data-toggle="pill" href="#custom-tabs-four-Infoclasss" role="tab" aria-controls="custom-tabs-four-Infoclasss" aria-selected="true">Info Class</a>
                    </li>
                    @if (Model.KyNangLopHocs.Where(x => x.idKN == 1).Count() > 0)
                    {
                        <li class="nav-item">
                            <a class="nav-link" id="custom-tabs-four-home-tab" data-toggle="pill" href="#custom-tabs-four-home" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true">Listening</a>
                        </li>
                    }

                    @if (Model.KyNangLopHocs.Where(x => x.idKN == 2).Count() > 0)
                    {
                        <li class="nav-item">
                            <a class="nav-link" id="custom-tabs-four-profile-tab" data-toggle="pill" href="#custom-tabs-four-profile" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="false">Speaking</a>
                        </li>
                    }

                    @if (Model.KyNangLopHocs.Where(x => x.idKN == 3).Count() > 0)
                    {
                        <li class="nav-item">
                            <a class="nav-link" id="custom-tabs-four-messages-tab" data-toggle="pill" href="#custom-tabs-four-messages" role="tab" aria-controls="custom-tabs-four-messages" aria-selected="false">Reading</a>
                        </li>
                    }

                    @if (Model.KyNangLopHocs.Where(x => x.idKN == 4).Count() > 0)
                    {
                        <li class="nav-item">
                            <a class="nav-link" id="custom-tabs-four-settings-tab" data-toggle="pill" href="#custom-tabs-four-settings" role="tab" aria-controls="custom-tabs-four-settings" aria-selected="false">Writing</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" id="custom-tabs-four-settings-tab" data-toggle="pill" href="#custom-tabs-four-onlineclasss" role="tab" aria-controls="custom-tabs-four-settings" aria-selected="false">Online Class</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="custom-tabs-four-tabContent">
                    <div class="tab-pane fade show active" id="custom-tabs-four-Infoclasss" role="tabpanel" aria-labelledby="custom-tabs-four-Infoclasss-tab">
                        @{Html.RenderAction("InfoLH", "QLLopHoc", Model);}
                    </div>
                    @if (Model.KyNangLopHocs.Where(x => x.idKN == 1).Count() > 0)
                    {
                        <div class="tab-pane fade " id="custom-tabs-four-home" role="tabpanel" aria-labelledby="custom-tabs-four-home-tab">
                            @{Html.RenderAction("Listening", "QLLopHoc", Model);}

                        </div>
                    }
                    @if (Model.KyNangLopHocs.Where(x => x.idKN == 2).Count() > 0)
                    {
                        <div class="tab-pane fade" id="custom-tabs-four-profile" role="tabpanel" aria-labelledby="custom-tabs-four-profile-tab">
                            @{Html.RenderAction("Speaking", "QLLopHoc", Model);}
                        </div>
                    }
                    @if (Model.KyNangLopHocs.Where(x => x.idKN == 3).Count() > 0)
                    {
                        <div class="tab-pane fade" id="custom-tabs-four-messages" role="tabpanel" aria-labelledby="custom-tabs-four-messages-tab">
                            @{Html.RenderAction("Reading", "QLLopHoc", Model);}
                        </div>
                    }

                    @if (Model.KyNangLopHocs.Where(x => x.idKN == 2).Count() > 0)
                    {
                        <div class="tab-pane fade" id="custom-tabs-four-settings" role="tabpanel" aria-labelledby="custom-tabs-four-settings-tab">
                            @{Html.RenderAction("Writing", "QLLopHoc", Model);}
                        </div>
                    }
                    <div class="tab-pane fade" id="custom-tabs-four-onlineclasss" role="tabpanel" aria-labelledby="custom-tabs-four-onlineclasss">
                        @{  Html.RenderAction("Zoom", "Zoom", Model.ID);}
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

