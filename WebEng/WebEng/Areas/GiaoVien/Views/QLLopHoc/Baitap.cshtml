@using Models.Framework
@model IEnumerable<TaiLieu>
@{
    ViewBag.Title = "Viet";
    int idkn = (int)ViewBag.idkn;
    var lophoc = (LopHoc)ViewBag.lophoc;
    int sdt = 1;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-3.3.1.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.16.1/standard/ckeditor.js"></script>
    <script>

        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
        $(function () {
            var ShowModal = $('#showModal');
            $('button[data-toggle="ajax-modal"]').click(function (event) {  
                alert('a');
                var url = $(this).data('url');
                $.get(url).done(function (data) {
                    ShowModal.html(data);
                    ShowModal.find('#myModalBT_bt').modal('show');
                })
            })
        });
        $("#stn").change(function () {
            alert("Handler for .change() called.");
           
        });
        
    </script>
</head>
<body>
    @if (TempData["testmsg"] != null)
    {
        <div class="alert alert-info col-md-8 offset-md-1">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-exclamation-triangle"></i> Thông báo!</h5>
            @TempData["testmsg"]
        </div>

    }
    
    <div class="container py-4">
        <h3 class="text-center text-uppercase">Bài tập</h3>
        <div class="card">
            <div class="card-header bg-primary text-white">
            </div>
            <div class="card-body">
                <div class="row">

                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-sm">
                        Tạo bài tập
                    </button>
                    <div class="modal fade" id="modal-sm">
                        <div class="modal-dialog modal-sm">
                            <div class="modal-content">
                                @using (Html.BeginForm("CreateBT", "QLLopHoc", FormMethod.Get))
                                {
                                    <input value="@lophoc.ID" name="idlh" hidden/>
                                    <input value="@idkn" name="idkn" hidden/>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <input type="number" name="stn" autofocus required class="form-control form-control-border border-width-2 focus" id="inputbt" placeholder="Số câu trắc nghiệm">
                                        </div>
                                    </div>
                                    <div class="modal-footer justify-content-between">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Next</button>
                                    </div>
                                }
                            </div>
                            <!-- /.modal-content -->
                        </div>
                    </div>
                </div>
                <div id="showModal"></div>
                <table id="dataTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Tên tài liệu</th>
                            <th>Người tạo</th>
                            <th>Thời gian tạo</th>
                            <th>Tài liệu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ten</td>
                                    <td>
                                        @item.TaiKhoan.hovaten
                                    </td>
                                    <td>@item.thoiGian</td>
                                    <td>
                                        @*<button type="button" class="btn-sm btn-primary" data-toggle="ajax-modal" data-target="#modal-edit-lg" data-url="@Url.Action($"Edit/{item.ID}")">  <i class="fa fa-eye"></i></button>*@
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
