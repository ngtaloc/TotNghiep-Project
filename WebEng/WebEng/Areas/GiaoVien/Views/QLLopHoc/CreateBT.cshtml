@using Models.Framework
@model BaiTap
@{
    ViewBag.Title = "CreateBT";
    Layout = "~/Views/Shared/_TemLayout.cshtml";
    int idkn = (int)ViewBag.idkn;
    int d = 0;
    var lophoc = (LopHoc)ViewBag.lophoc;
    List<CauHoi> cauhoi = Model.CauHois.ToList();
}
