<!-- jQuery -->
<script src="~/Content/Template/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/Content/Template/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
